project TestProject

define tokens
(
    func    Func
    test    Test
    Name    Name
    {       OpenBlock
    }       CloseBlock
    \(      OpenArg
    \)      CloseArg
    ,       Next
)

Function    
( 
    func < Name : name > \( < Arguments : args > \) 
        < Block : block > 
)

Block       
( 
      < Statement : statement > 
    | ( { < MultiBlock : multi_block } ) 
    : type
)

MultiBlock
(
    < Statement : statement >
    < MultiBlock : next >? : has_next
)

Statement   ( < test : test > )

Arguments
(
    < Name : arg >
    ( , < Arguments : next> )? : has_next
)
